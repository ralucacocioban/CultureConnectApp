<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.techsoc.cultureconnect"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_new"
        android:label="@string/app_name"
        android:theme="@style/Theme.Culture_connect_ab" 
        android:screenOrientation="portrait">
        
        <activity
            android:name="com.techsoc.cultureconnect.countrypicker.CountryPickerActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.techsoc.cultureconnect.navigation.NavigationActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.techsoc.cultureconnect.talk.BluetoothChat"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.techsoc.cultureconnect.talk.DeviceListActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.techsoc.cultureconnect.settings.MySettings"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.techsoc.cultureconnect.singletalk.SingleDeviceChatActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
    </application>

</manifest>
